/****************************************************************** rProgramInfo definitions** rProgInfo resource type $C004* version $0000* by Eric Shepherd** The rProgramInfo resource provides information about an* application or system extension.******************************************************************/#define rProgramInfo $C004type rProgramInfo {   integer = 9;              // number of fields in the resource                             // (not including this pCount field)   integer = $0000;          // rProgInfo resource version   ReverseBytes {       hex byte;       hex bitstring[4];       hex bitstring[4];       hex byte development = 0x20,                alpha = 0x40,                beta = 0x60,                final = 0x80, release = 0xA0;       hex byte;   };   longint;                 // minimum RAM needed in bytes   longint;                 // optimal RAM needed in bytes   word;                    // bank zero RAM needed in bytes   longint = $FCFFFCCE;     // mask for valid bits in infoFlags   longint;                 // infoFlags   longint = $FFFC0000;     // mask for valid bits in shellInfo   longint;                 // shellInfo};//---- infoFlags defining multitasking abilities - valid only for//---- applications (not for extensions)#define progCanMultitask  $80000000  // 1 = program can be multitasked#define progCanSwitch     $40000000  // 1 = program can go into standby mode#define progRequiresGNO   $20000000  // 1 = program requires GNO#define progBlastsSHR     $10000000  // 1 = program directly alters SHR#define progCanStackShare $08000000  // 1 = program can stack-share//---- infoFlags defining interrupt and run queue useage#define progUsesIntHB     $00800000  // 1 = program uses HeartBeat ints.#define progUsesIntVBL    $00400000  // 1 = program uses VBL interrupts#define progUsesIntSerial $00200000  // 1 = program uses serial interrupts#define progUsesRunQueue  $00100000  // 1 = program uses the run queue//---- infoFlags defining toolbox and vector patching#define progPatchesGSOS   $04000000  // 1 = program patches GS/OS vectors#define progPatchesIRQ    $00080000  // 1 = program hks. into int. dispatcher#define progTLPatchAware  $00040000  // 1 = uses Apple's TL patch protocol#define progPatchesTL     $00020000  // 1 = program patches Tool Dispatcher#define progPatchesCalls  $00010000  // 1 = patches individual tool calls//---- infoFlags specifying compatibility with system components#define progAppleTalkOK   $00008000  // 1 = AppleTalk & program get along#define progIntSensitive  $00004000  // 1 = program dislikes lots of interrupts#define progUsesSound     $00002000  // 1 = program uses sound tools/chip#define progAllowsNDAs    $00001000  // 1 = program allows NDA useage#define progAllowsCDAs    $00000800  // 1 = program allows CDA access#define progUsesDesktop   $00000400  // 1 = program has custom desktop procedure//---- infoFlags defining compatibility with non-Apple system components#define progUsesHierarchic  $00000080  // 1 = program uses Hierarchic#define progNeedsHierarchic $00000040  // 1 = program REQUIRES Hierarchic//---- infoFlags defining installation requirements#define progBootInstallOnly $00000008  // 1 = must be installed at boot-time#define progRequiresROM1    $00000004  // 1 = program requires a ROM 01#define progRequiresROM3    $00000002  // 1 = program requires a ROM 3/*******************************************************************///---- shellInfo defining shell compatibility for EXEs//// To use, multiply piXXX by progShellXXX.  For example, the following// specifies ORCA 1.0, 2.0, and gsh compatibility, and that it uses// special features of the gsh shell://// piCompatible*progShellORCA + piCompatible*progShellORCA2//        + piSpecialFeatures*progShellGSH#define piNotCompatible    0          // program not compatible with this#define piUntested         1          // program not tested with this shell#define piCompatible       2          // program compatible with this shell#define piSpecialFeatures  3          // program uses special features of this#define progShellORCA      $40000000  // shift for ORCA shell#define progShellORCA2     $10000000  // shift for ORCA shell 2.0+#define progShellProSel    $04000000  // shift for ProSel#define progShellMTools    $01000000  // shift for MTools shell#define progShellMerlin16  $00400000  // shift for Merlin 16 shell#define progShellGSH       $00100000  // shift for GNO gsh shell#define progShellPrizm     $00040000  // shift for Prizm desktop env.